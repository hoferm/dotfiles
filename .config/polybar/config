[colors]
background = #1d252c
background-alt = #444
foreground = #a0b3c5
foreground-alt = #888
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/main]
width = 100%
height = 3%

fixed-center = true
bottom = false

background = ${colors.background}
foreground = ${colors.foreground}

border-size = 0
line-size = 2
padding = 1
module-margin = 1

font-0 = "Source Code Pro:pixelsize=12;2"
font-1 = "FontAwesome:size=12;3"
font-2 = "Material Icons:size=12;3"
font-3 = "Weather Icons:size=12;3"
font-4 = "github-octicons:size=12;3"

modules-left = date bspwm xwindow
modules-center = mpd
modules-right = eth memory cpu alsa

tray-position = right
tray-padding = 2
tray-maxsize = 24

override-redirect = false
wm-restack = bspwm

[module/date]
type = internal/date

interval = 1.0

date = %a %d
time = %H:%M:%S

format-prefix =
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #0a6cf5

label = %date% %time%

[module/bspwm]
type = internal/bspwm

enable-scroll = false

label-focused-underline = #fba922
label-occupied-underline = ${colors.foreground-alt}
label-urgent-underline = #9b0a20
label-occupied-foreground = #cccccc
label-empty-foreground = #555555

[module/xwindow]
type = internal/xwindow
label = %title:0:35:...%

[module/eth]
type = internal/network
interface = enp6s0
interval = 3.0

format-connected-prefix-foreground = ${colors.foreground-alt}

label-connected =  %downspeed:1:9%  %upspeed:1:9%

format-disconnected =

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
label = %percentage_used:2%%

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
label = %percentage:2%%

[module/mpd]
type = internal/mpd

host = 127.0.0.1
port = 6600

format-online = <toggle> <label-song> <label-time> <icon-repeat>
format-stopped = <icon-stop> <label-song> <icon-repeat>

label-time = - %elapsed% / %total%

icon-play = 
icon-pause = 
icon-stop = 
icon-repeat = 

toggle-on-foreground = ${colors.foreground}
toggle-off-foreground = ${colors.foreground-alt}

# bar-progress-width = 15
# bar-progress-indicator = >
# bar-progress-fill = =
# bar-progress-empty = -

[module/alsa]
type = internal/alsa
format-volume = <ramp-volume> <label-volume>

label-muted =  muted
label-muted-foreground = #66

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
